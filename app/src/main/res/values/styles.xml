<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemText">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LineField" parent="@style/ItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DeltaField" parent="@style/ItemText">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TimeField" parent="@style/ItemText">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:paddingRight">6sp</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
